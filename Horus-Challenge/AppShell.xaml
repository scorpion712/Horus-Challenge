<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Horus_Challenge.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Horus_Challenge.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Horus_Challenge">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent Title="Gamification"
                  ContentTemplate="{DataTemplate views:GamificationPage}"
                  Route="GamificationPage" />
</Shell>
